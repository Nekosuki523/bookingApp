<h3>施設新規登録</h3>

<%= form_with model: @room do |f| %>
  <table>
    <tr>
      <th><%= f.label :name_facility ,"施設名" %></th>
      <td><%= f.text_field :name_facility %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction ,"施設詳細" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>

    <tr>
      <th><%= f.label :price ,"料金" %></th>
      <td><%= f.text_field :price %></td>
    </tr>

    <tr>
      <th><%= f.label :address ,"住所" %></th>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <th><%= f.label :avatar , "施設画像" %></th>
      <td><%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %></td>
  </table>

  <div>
    <ul> 
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "情報一覧に戻る", :rooms %></li>
    </ul>
  </div>
<% end %>
