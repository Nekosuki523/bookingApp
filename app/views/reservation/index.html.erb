<h3>予約済み一覧</h3>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>合計料金</th>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予定確定日時</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
    <% @reservation.each do |reservation| %>
      <tr>
        <td></td>
        <td><%= room.name_facility %></td> <!--予約と施設をちゃんとルーティング繋げてないからメソッドエラーになるのか？-->
        <td><%= room.introduction %></td>
        <td><%= room.price %></td>
        <td><%= reservation.checkin %></td>
        <td><%= reservation.checkout %></td>
        <td><%= user.created_at %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

